---
import BaseLayout from "../layouts/BaseLayout.astro";
import Spinner from "../components/common/Spinner.astro";
import PackageDrawer from "../components/packages/PackageDrawer.astro";
import MarkdownModal from "../components/packages/MarkdownModal.astro";
import CategoryTemplate from "../components/packages/CategoryTemplate.astro";
import GridTemplate from "../components/packages/GridTemplate.astro";
import CardTemplate from "../components/packages/CardTemplate.astro";

const pageTitle = "Packages";
const pageDescription = "Packages";
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <Spinner class="w-32 mt-8">a</Spinner>
  <div class="packages-container flex flex-col gap-20 py-12"></div>
  <PackageDrawer />
  <MarkdownModal />
  <CategoryTemplate />
  <GridTemplate />
  <CardTemplate />
</BaseLayout>

<script src="../scripts/packages.js"></script>
