---
import BaseLayout from "../layouts/BaseLayout.astro";
import Spinner from "../components/common/Spinner.astro";
import PackageDrawer from "../components/packages/package-drawer/PackageDrawer.astro";
import MarkdownModal from "../components/packages/markdown-modal/MarkdownModal.astro";
import CategoryTemplate from "../components/packages/CategoryTemplate.astro";
import GridTemplate from "../components/packages/GridTemplate.astro";
import CardTemplate from "../components/packages/CardTemplate.astro";

const pageTitle = "Packages";
const pageDescription = "A list of all VRLabs packages.";
