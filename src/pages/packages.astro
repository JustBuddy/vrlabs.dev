<style>
  .animate-skeleton {
    animation: shine 1.5s ease-in-out infinite;
    background-image: linear-gradient(
      to right,
      rgba(0, 0, 0, 0) 0%,
      rgba(255, 255, 255, 0.05) 20%,
      rgba(0, 0, 0, 0) 40%
    );
    background-size: 1000px 100%;
  }

  @keyframes shine {
    0% {
      background-position: -500px;
    }
    100% {
      background-position: 500px;
    }
  }
</style>
