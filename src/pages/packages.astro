---
import BaseLayout from "../layouts/BaseLayout.astro";
import PackageDrawer from "../components/PackageDrawer.astro";
const pageTitle = "Packages";
const pageDescription = "Packages";
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <div class="packages-spinner flex justify-center">
    <img class="w-16 h-16" src="/images/spinner.gif" alt="" loading="eager" />
  </div>
  <div class="packages-container flex flex-col gap-16 py-10"></div>

  <!--  -->

  <div
    class="packages-categoryTemplate hidden sm:justify-between transition-all duration-500 items-center mb-6 sm:grid-flow-col-dense justify-center place-items-center gap-1"
  >
    <h2
      class="packages-categoryTemplate-title font-Novecento-Utrabold text-mobileHeading2 sm:text-desktopHeading2"
    >
      Category Name
    </h2>
    <button
      class="packages-categoryTemplate-vccButton bg-elements rounded-lg px-4 py-2 font-Sans-Bold"
      aria-label="Add category to VCC">Add category to VCC</button
    >
  </div>

  <!--  -->

  <div
    class="packages-gridTemplate hidden grid-cols-packagesMobile sm:grid-cols-packages gap-8 justify-center grid-flow-dense"
  >
  </div>

  <!--  -->

