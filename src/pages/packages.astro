<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <Spinner class="packages-spinner w-32 mt-8">a</Spinner>
  <div class="packages-container flex flex-col gap-16 py-12"></div>
  <div class="background w-screen h-screen fixed top-0 left-0 -z-50"></div>
  <PackageDrawer />
  <MarkdownModal />
  <CategoryTemplate />
  <GridTemplate />
  <CardTemplate />
</BaseLayout>

