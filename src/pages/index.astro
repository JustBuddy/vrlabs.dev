---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/common/Button.astro";
import icons from "../icons.json";

const socialIcons = [
  {
    name: "Discord",
    link: "https://discord.vrlabs.dev/",
    svg: icons.discord,
    color: "fill-blue-400",
  },
  {
    name: "Patreon",
    link: "https://www.patreon.com/VRLabs/posts",
    svg: icons.patreon,
    color: "fill-red-400",
  },
  {
    name: "Twitter",
    link: "https://twitter.com/vrlabsdev",
    svg: icons.twitter,
    color: "fill-blue-400",
  },
  {
    name: "Github",
    link: "https://github.com/VRLabs",
    svg: icons.github,
    color: "fill-gray-400",
  },
];

const pageTitle = "VRLabs";
const pageDescription =
  "Bringing free to use tools, systems, and knowledge to VRChat creators";
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <Fragment slot="content">
    <section
      class="relative z-10 bg-elements rounded-lg px-4 py-16 mt-4 mb-10 sm:mb-16 flex flex-col sm:flex-row gap-4 items-center shadow-lg border-1 border-border border-t-borderBright text-center sm:text-left"
    >
      <img
        class="min-w-36 h-36 sm:min-w-48 sm:h-48 object-cover -scale-x-100"
        src="/images/idle.webp"
        loading="eager"
        alt=""
      />
      <div>
        <h2 class="text-mobileHeading2 sm:text-desktopHeading2 font-Sans-Bold">
          Packages
        </h2>
        <p class="text-textSecondary mb-6 mt-1">
          Easily view and download our packages or add them to your VRChat
          Creator Companion by visiting our package listing page!
        </p>
        <Button
          color="action"
          type="filled"
          size="large"
          round
          class="!text-normal !w-full sm:!w-fit !min-w-44"
          anchor="/packages/"
          ariaLabel="View listing"
        >
          View Listing
          <svg
            class="h-full fill-current stroke-none py-2"
            viewBox="0 0 15 15"
            xmlns="http://www.w3.org/2000/svg"
            set:html={icons.arrow}
          />
        </Button>
      </div>
    </section>
    <section
      class="relative z-10 bg-elements rounded-lg px-4 py-16 mt-4 mb-10 sm:mb-16 flex flex-col sm:flex-row gap-4 items-center shadow-lg border-1 border-border text-center sm:text-left"
    >
      <img
        class="min-w-36 h-36 sm:min-w-48 sm:h-48 object-cover -scale-x-100"
        src="/images/avatar.webp"
        alt=""
      />
      <div>
        <h2 class="text-mobileHeading2 sm:text-desktopHeading2 font-Sans-Bold">
          Avatar
        </h2>
        <p class="text-textSecondary mb-6 mt-1">
          Test all of our packages in VRChat by trying out our free to use
          avatar!
        </p>
        <Button
          color="action"
          type="filled"
          size="large"
          round
          class="!text-normal !w-full sm:!w-fit !min-w-44"
          anchor="https://vrchat.com/home/avatar/avtr_e696906c-a086-4c88-a946-b27d3d410241"
          selfAnchor
          ariaLabel="Get Avatar"
        >
          Get Avatar
          <svg
            class="h-full fill-none stroke-current py-2"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            set:html={icons.external}
          />
        </Button>
      </div>
    </section>
    <section
      class="relative z-10 bg-elements rounded-lg px-4 py-16 mt-4 mb-10 sm:mb-16 flex flex-col sm:flex-row gap-4 items-center shadow-lg border-1 border-border text-center sm:text-left"
    >
      <img
        class="min-w-36 h-36 sm:min-w-48 sm:h-48 object-cover -scale-x-100 p-4"
        src="/images/unity.webp"
        alt=""
      />
      <div>
        <h2 class="text-mobileHeading2 sm:text-desktopHeading2 font-Sans-Bold">
          Learn
        </h2>
        <p class="text-textSecondary mb-6 mt-1">
          Learn everything you need to know to make VRChat Avatar Systems.
        </p>
        <Button
          color="action"
          type="filled"
          size="large"
          round
          class="!text-normal !w-full sm:!w-fit !min-w-44"
          anchor="https://vrc.school"
          selfAnchor
          ariaLabel="Open VRC School"
        >
          Get Started
          <svg
            class="h-full fill-none stroke-current py-2"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            set:html={icons.external}
          />
        </Button>
      </div>
    </section>
    <section class="grid gap-4 mt-4 mb-16 grid-cols-2 ssm:grid-cols-4">
      {
        socialIcons.map((icon) => (
          <Button
            color="standard"
            type="filled"
            size="medium"
            expand
            anchor={icon.link}
            selfAnchor
            class="!h-auto !py-4 !px-4 shadow-lg flex flex-col items-center justify-center gap-4"
            ariaLabel={icon.name}
          >
            <svg
              class:list={[icon.color, "w-12 h-12"]}
              viewBox="0 0 80 80"
              xmlns="http://www.w3.org/2000/svg"
              set:html={icon.svg}
            />
            {icon.name}
          </Button>
        ))
      }
    </section>
  </Fragment>
</BaseLayout>
