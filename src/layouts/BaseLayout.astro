---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";

const { pageTitle, pageDescription } = Astro.props;
---

<html lang="en">
  <head>
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta charset="utf-8" />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content="VRChat, Unity, Packages, Avatars" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:url" content="https://vrlabs.dev/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="VRLabs" />
    <meta property="og:description" content="" />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="vrlabs.dev" />
    <meta property="twitter:url" content="https://vrlabs.dev/" />
    <meta name="twitter:title" content="VRLabs" />
    <meta name="twitter:description" content="" />
    <meta name="twitter:image" content="" />

    <ViewTransitions />
  </head>
  <body
    class="flex flex-col overflow-x-hidden min-h-screen text-textPrimary font-Sans text-normal bg-background bg-fixed w-full break-word"
  >
    <Navbar />
    <div class="max-w-6xl px-5 sm:px-10 mx-auto my-10 w-full">
      <h1
        class="text-mobileHeading sm:text-desktopHeading font-Novecento-Utrabold mb-5 text-center"
        transition:animate="slide"
      >
        {pageTitle}
      </h1>
      <slot />
    </div>

    <Footer />
  </body>
</html>
