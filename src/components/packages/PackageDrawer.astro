---
import icons from "../../icons.json";
---

<div
  class="drawer left-0 right-0 bottom-0 w-screen fixed transition-all duration-300 flex justify-center z-40 h-0 pointer-events-none will-change-transform mb-4"
>
  <div
    class="drawer-container w-full sm:max-w-2xl hidden flex-col pointer-events-auto bg-gradient-to-br from-elementsBright to-background rounded-xl border-2 border-borderColorBright overflow-hidden"
  >
    <div
      class="drawer-main w-full h-full flex flex-col items-center px-2 overflow-hidden"
    >
      <div
        class="drawer-toggle rounded-t-xl cursor-pointer w-full flex justify-center items-center gap-3 py-4 text-mobileLarge sm:text-desktopLarge font-Novecento-Utrabold hover:text-action transition-all duration-100"
      >
        <p>VCC List</p>
        <div
          class="drawer-count rounded-full bg-action text-textPrimary w-10 text-center"
        >
          0
        </div>
      </div>
      <div
        class="drawer-packages w-full bg-transparent border-y-1 border-borderColor"
      >
        <div class="p-5">
          <div
            class="drawer-emptyMessage flex justify-center text-textSecondary text-small"
          >
            You have no packages selected
          </div>
          <ul class="drawer-packagesList"></ul>
        </div>
      </div>
    </div>
    <div class="flex gap-1 px-2 py-4">
      <button
        class="drawer-addToVCCButton bg-action rounded-lg px-6 py-2 w-full font-Sans-Bold hover:brightness-110 transition-all duration-200"
        >Add To VCC</button
      >
      <button
        class="drawer-copyButton bg-background/0 rounded-lg border-1 border-borderColor hover:brightness-125 transition-all duration-200"
        aria-label="Download package"
      >
        <svg
          viewBox="0 0 80 80"
          class="h-5 w-10 fill-textSecondary stroke-textSecondary"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          set:html={icons.copy}
        />
      </button>
    </div>
  </div>
</div>

<style>
  .drawer-packages::-webkit-scrollbar {
    display: none;
  }

  .drawer-packages {
    scrollbar-width: none;
  }
</style>

<script src="../../scripts/packageDrawer"></script>
