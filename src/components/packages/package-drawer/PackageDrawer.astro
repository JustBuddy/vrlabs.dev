---
import Button from "../../common/Button.astro";
---

<div
  class="drawer left-0 right-0 bottom-0 w-screen fixed transition-all duration-300 flex justify-center z-40 h-0 pointer-events-none will-change-transform mb-4"
>
  <div
    class="drawer-container w-full sm:max-w-2xl hidden flex-col pointer-events-auto bg-background rounded-xl border-1 border-borderColorBright overflow-hidden"
  >
    <div
      class="drawer-main w-full h-full flex flex-col items-center px-4 overflow-hidden"
    >
      <div
        class="drawer-toggle rounded-t-xl cursor-pointer w-full flex justify-center items-center gap-3 py-4 text-mobileLarge sm:text-desktopLarge font-Novecento-Utrabold hover:text-action transition-all duration-100"
      >
        <p>VCC List</p>
        <div
          class="drawer-count rounded-full bg-action text-textPrimary w-10 text-center"
        >
          0
        </div>
      </div>
      <div
        class="drawer-packages w-full bg-transparent border-y-1 border-borderColor"
      >
        <div class="py-5">
          <div
            class="drawer-emptyMessage flex justify-center text-textSecondary text-small"
          >
            You have no packages selected
          </div>
          <ul class="drawer-packagesList"></ul>
        </div>
      </div>
    </div>
    <div class="flex gap-1 px-4 py-4">
      <Button
        color="secondary"
        type="filled"
        size="medium"
        expand
        class="drawer-addToVCCButton"
      >
        Add to VCC
      </Button>
      <Button
        color="primary"
        type="filled"
        size="medium"
        icon="copy"
        iconFill
        class="drawer-copyButton !px-2 !text-textSecondary"
      />
    </div>
  </div>
</div>

<style>
  .drawer-packages::-webkit-scrollbar {
    display: none;
  }

  .drawer-packages {
    scrollbar-width: none;
  }
</style>

<script src="./packageDrawer.js"></script>
