---
import Button from "../common/Button.astro";
---

<div
  class="category-template hidden transition-all duration-500 items-center mb-8 sm:flex-row flex-col justify-between place-items-center gap-1 py-2 px-4 rounded-lg bg-elements border-1 border-border shadow-lg"
>
  <h2
    class="category-title font-Novecento-Utrabold text-mobileHeading2 sm:text-desktopHeading2"
  >
    Category Name
  </h2>
  <Button
    color="bright"
    type="filled"
    size="medium"
    class="category-vccButton"
    ariaLabel="Add category to VCC"
  >
    Add category to VCC
  </Button>
</div>
