<div
  id="drawer"
  class="left-0 right-0 bottom-0 w-full fixed transition-all duration-300 flex justify-center z-10 h-0 mb-3 overflow-hidden"
>
  <div
    id="drawerContainer"
    class="w-11/12 max-w-xl bg-slate-600 rounded-xl h-full flex items-center flex-col"
  >
    <div
      id="drawerToggle"
      class="rounded-t-xl cursor-pointer w-full flex justify-center items-center gap-3 py-4 font-Sans-Bold text-mobileLarge sm:text-desktopLarge hover:text-action transition-all duration-100"
    >
      <p>Add to VCC</p>
      <div
        id="packagesCount"
        class="rounded-full bg-action text-primary w-10 text-center"
      >
        0
      </div>
    </div>
    <div
      id="drawerPackages"
      class="drawerPackages w-11/12 bg-slate-700 rounded-xl"
    >
      <div id="drawerEmptyMessage" class="hidden">
        <div class="flex justify-center p-5">You have no packages selected</div>
      </div>
      <ul id="drawerPackagesList" class="p-5"></ul>
    </div>
    <div
      id="drawerButtons"
      class="w-full flex justify-center items-center gap-5 py-4 rounded-b-xl mt-auto"
    >
      <button id="addToVCCButton">Add To VCC</button>
      <button>Copy Link</button>
    </div>
  </div>
</div>

<style>
  .drawerPackages::-webkit-scrollbar {
    display: none;
  }

  .drawerPackages {
    scrollbar-width: none;
  }
</style>

<script>
  import { prepareDrawer } from "../scripts/basket";

  document.addEventListener("astro:page-load", () => {
    if (window.location.pathname !== "/packages") return;
    prepareDrawer();
  });
</script>
