---
import NavItems from "./NavItems.astro";

// Apply focus:ring to everything
// use divide for nav elements
---

<nav
  class="bg-black/15 top-0 backdrop-blur-md z-50 border-b-1 border-white/20 flex py-4 font-Sans-Bold text-mobileLarge sm:text-desktopLarge flex-col sticky"
>
  <div
    class="flex items-center justify-between max-w-6xl px-5 sm:px-10 mx-auto w-full"
  >
    <div>
      <a href="/">
        <img class="h-12" src="/favicon.svg" alt="logo" />
      </a>
    </div>
    <ul class="gap-10 items-center hidden sm:flex">
      <NavItems />
    </ul>
    <div class="flex sm:hidden">
      <button>
        <img class="h-8" src="/images/menu.svg" alt="menu" />
      </button>
    </div>
  </div>
  <ul
    id="mobile-menu"
    class="items-center flex-col gap-8 pt-4 mt-4 border-t-1 border-white/10 fade-out hidden sm:hidden"
  >
    <NavItems />
  </ul>
</nav>

<script>
  document.addEventListener("astro:page-load", () => {
    let mobileMenu = document.getElementById("mobile-menu");

    document.querySelector("button").addEventListener("click", () => {
      mobileMenu.classList.toggle("flex");
      mobileMenu.classList.toggle("hidden");
    });
  });
</script>
