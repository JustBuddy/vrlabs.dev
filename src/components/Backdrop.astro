<div
  class="backdrop fixed w-screen h-screen bg-black/30 backdrop-blur top-0 left-0"
  data-state="closed"
  aria-hidden="true"
  tabindex="-1"
>
</div>

<style>
  .backdrop[data-state="opened"] {
    animation: open 200ms ease-out forwards;
  }

  .backdrop[data-state="closed"] {
    animation: close 200ms ease-out forwards;
  }

  @keyframes open {
    0% {
      opacity: 0;
      visibility: visible;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes close {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
      visibility: hidden;
    }
  }
</style>
